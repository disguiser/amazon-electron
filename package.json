{
  "name": "amazon-electron",
  "version": "1.0.0",
  "description": "hahaha",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "dev:electron": "concurrently \"cross-env NODE_ENV=development vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vue-tsc --noEmit && vite build && electron-builder",
    "build:win32": "vue-tsc --noEmit && vite build && electron-builder --win  --ia32",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.vue src",
    "clean": "rimraf dist dist-electron"
  },
  "author": "zhou",
  "license": "MIT",
  "build": {
    "productName": "Amazon Electron",
    "appId": "org.zhou.amazon-electron",
    "win": {
      "icon": "logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^25.3.2",
    "electron-builder": "^24.4.0",
    "vite": "^4.4.5",
    "vite-plugin-electron": "^0.12.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1",
    "vue-tsc": "^2.2.10",
    "vuex": "^4.1.0"
  }
}
